model UserExample {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  duration    Int
  priority    Int
  completed   Boolean  @default(false)
  dueDate     DateTime @default(now())
  createdAt   DateTime @default(now())
}
